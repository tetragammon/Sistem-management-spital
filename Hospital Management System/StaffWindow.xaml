        <Label x:Name="lblSupplier" Content="Detalii furnizor" HorizontalAlignment="Left" Margin="10,352,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnAddView" Content="Adaugare/Vizualizare" HorizontalAlignment="Left" Height="25" Margin="34,380,0,0" VerticalAlignment="Top" Width="136" Click="btnAddView_Click"/>
        <Button x:Name="btnDispensary" Content="Dispensar" HorizontalAlignment="Left" Margin="34,461,0,0" VerticalAlignment="Top" Height="25" Width="136" Click="btnDispensary_Click"/>
        <Button x:Name="btnBloodBank" Content="Banca sange" HorizontalAlignment="Left" Margin="34,508,0,0" VerticalAlignment="Top" Height="25" Width="136" Click="btnBloodBank_Click"/>
        <Frame x:Name="staffFrame" NavigationUIVisibility="Hidden" Content="" HorizontalAlignment="Left" Height="600" Margin="250,0,0,0" VerticalAlignment="Top" Width="1000"/>
        <Label x:Name="label" Content="Logged in Personal" HorizontalAlignment="Left" Margin="44,25,0,0" VerticalAlignment="Top"/>
        <Button x:Name="button" Content="Logout" HorizontalAlignment="Left" Margin="111,76,0,0" VerticalAlignment="Top" Width="59" Click="button_Click"/>
        <Button x:Name="btnUpdateInfo" Content="Update" HorizontalAlignment="Left" Margin="34,76,0,0" VerticalAlignment="Top" Width="56" Click="btnUpdateInfo_Click"/>
        <TextBox x:Name="loginAsStaff" HorizontalAlignment="Left" Height="20" Margin="34,51,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="136" IsEnabled="False"/>
    </Grid>
</Window>
